
<div >
  <ul>
    <div class = "scrolling-list clear">
      <% if @events != [] && @events != nil %>
        <% @events.each do |event| %>
          <li class="place-marker">
             <a href="#" class="location-marker"
                data-event-id=<%="#{event.id}"%>
                data-disease=<%="#{event.disease}"%>
                data-latitude=<%="#{event.latitude}"%>
                data-longitude=<%= "#{event.longitude}" %>
                data-location=<%= "#{event.geo.name}" %>
                data-date=<%= "#{event.date}" %>
                data-number-infected=<% "#{event.number_infected}" %>>
              <%="#{event.date.strftime("%m/%d/%Y")}: #{event.disease} infected #{event.number_infected} people in #{event.location}, #{event.state} " %> </a>
          </li>
        <% end %>
      <% else %>
      <h2>No Events Found For This Query</h2>
      <% end %>
    </div>
  </ul>
</div>
