
<div id="query-box">
  <a href="#" class="auto-mark menu-item">Mark All Events</a>
  <a href="#" class="menu-item">|</a>
  <a href="#" class="clear-markers menu-item">Clear Markers</a>
  <a href="#" class="menu-item">|</a>
  <a href="#" class="menu-item" id="select-outbreak">Query Events</a>
  <a href="#" class="menu-item">|</a>
  <a href="/" class="menu-item">Reset Query</a>
  <!-- Button trigger modal -->
  <a class="menu-item" data-toggle="modal" data-target="#myGraphModal">See graph</a>
</div>

<div id="outbreak-query-box" class="query-form" style="display: none" >
  <%= form_tag query_path, method:"get" do %>

    <select id="outbreak-choices" name="outbreak_id">
      <option value="0">Choose Outbreaks</option>
      <% @outbreaks.each do |obk| %>
        <option value="<%= obk %>"> <%= Outbreak.find(obk).title %> </option>
      <% end %>
    </select>

    <select id="disease-choices" name="disease_id">
      <option value="0">Choose Medical Conditions</option>
      <% @diseases.each do |id| %>
        <option value="<%= id %>"> <%= MedicalCondition.find(id).name %> </option>
      <% end %>
    </select>

    <%= submit_tag "Submit Query" %>

  <% end %>
</div>

<!-- Modal -->
<div class="modal fade" id="myGraphModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="false">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Events over time</h4>
      </div>
      <div class="modal-body">
        <!-- <div id="linechart_material"></div> -->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
